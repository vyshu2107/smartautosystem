<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Contact — MBU Transport</title>
  <style>
    :root{
      --bg:#f7f8fb;
      --card:#ffffff;
      --accent:#0b5cff;
      --muted:#666;
      --radius:12px;
      --max-width:1000px;
      font-family:Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
    }
    body{
      margin:0;
      background:linear-gradient(180deg,var(--bg),#ffffff);
      color:#111;
      -webkit-font-smoothing:antialiased;
      -moz-osx-font-smoothing:grayscale;
      padding:32px;
      display:flex;
      justify-content:center;
    }
    .wrap{
      width:100%;
      max-width:var(--max-width);
    }
    header{
      display:flex;
      align-items:center;
      justify-content:space-between;
      gap:20px;
      margin-bottom:28px;
    }
    .brand{
      display:flex;
      gap:12px;
      align-items:center;
    }
    .logo{
      width:48px;
      height:48px;
      background:linear-gradient(135deg,#0b5cff,#2bd4b7);
      border-radius:10px;
      display:flex;
      align-items:center;
      justify-content:center;
      color:white;
      font-weight:700;
      font-size:18px;
    }
    nav a{
      margin:0 8px;
      color:var(--muted);
      text-decoration:none;
      font-weight:600;
    }
    .hero{
      background:var(--card);
      border-radius:var(--radius);
      box-shadow:0 6px 18px rgba(20,30,60,0.06);
      padding:28px;
      margin-bottom:20px;
    }
    .grid{
      display:grid;
      grid-template-columns:1fr 420px;
      gap:22px;
      align-items:start;
    }
    h1{ margin:0 0 6px 0; font-size:26px; }
    h2{ margin:0 0 14px 0; color:var(--muted); font-weight:600; font-size:14px }
    .card{
      background:var(--card);
      padding:18px;
      border-radius:12px;
      box-shadow:0 6px 18px rgba(20,30,60,0.04);
    }
    .contact-info{
      display:flex;
      flex-direction:column;
      gap:12px;
      font-size:15px;
    }
    .info-row{ display:flex; gap:12px; align-items:center; }
    .info-label{ width:84px; font-weight:700; color:var(--muted); }
    .muted{ color:var(--muted); font-size:14px; }
    form{
      display:flex;
      flex-direction:column;
      gap:10px;
    }
    .row{ display:flex; gap:10px; }
    .row .field{ flex:1; }
    input, textarea{
      width:100%;
      padding:10px 12px;
      border-radius:8px;
      border:1px solid #e6e9ef;
      font-size:14px;
      box-sizing:border-box;
      background:#fff;
    }
    textarea{ min-height:120px; resize:vertical; }
    .btn{
      display:inline-flex;
      align-items:center;
      gap:8px;
      padding:10px 14px;
      border-radius:10px;
      background:var(--accent);
      color:white;
      font-weight:700;
      border:none;
      cursor:pointer;
      box-shadow:0 8px 20px rgba(11,92,255,0.12);
    }
    .note{ color:#d9534f; font-size:13px; }
    footer{
      margin-top:20px;
      text-align:center;
      color:var(--muted);
      font-size:13px;
    }

    /* responsive */
    @media (max-width:880px){
      .grid{ grid-template-columns:1fr; }
      header{ flex-direction:column; align-items:flex-start; gap:16px; }
    }
  </style>
</head>
<body>
  <div class="wrap">
    <header>
      <div class="brand">
        <div class="logo">MBU</div>
        <div>
          <div style="font-weight:800">mbu transport</div>
          <div style="font-size:13px;color:var(--muted)">Safe. Simple. On time.</div>
        </div>
      </div>
      <nav aria-label="Main menu">
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/services">Services</a>
        <a href="/blog">Blog</a>
        <a href="/contact" style="color:var(--accent);">Contact</a>
      </nav>
    </header>

    <section class="hero">
      <div class="grid">
        <!-- left: content + form -->
        <div>
          <h1>Contact MBU Transport for Assistance</h1>
          <h2>We’re Here to Help You</h2>

          <div class="card" style="margin-bottom:16px;">
            <div class="contact-info">
              <div class="info-row"><div class="info-label">Phone</div><div>06300539575</div></div>
              <div class="info-row"><div class="info-label">Email</div><div>kgowripriya2006@gmail.com</div></div>
              <div class="info-row"><div class="info-label">Address</div><div># 7-302 NEHRU BAZAR</div></div>
              <div class="info-row"><div class="info-label">Social</div><div class="muted">Facebook · Instagram · X</div></div>
            </div>
          </div>

          <div class="card">
            <form id="contactForm" novalidate>
              <div class="row">
                <div class="field"><input id="firstName" name="firstName" placeholder="First Name *" required></div>
                <div class="field"><input id="lastName" name="lastName" placeholder="Last Name *" required></div>
              </div>

              <input id="email" name="email" placeholder="Email *" type="email" required>
              <textarea id="message" name="message" placeholder="Message *" required></textarea>

              <div id="formMsg" class="note" role="status" aria-live="polite" style="min-height:18px;"></div>

              <div style="display:flex;gap:10px;align-items:center;margin-top:8px;">
                <button class="btn" type="submit">Submit</button>
                <div id="spinner" style="display:none;">⏳</div>
              </div>
            </form>
          </div>
        </div>

        <!-- right column: CTA -->
        <aside>
          <div class="card">
            <h3 style="margin:0 0 8px 0">Start Your Journey</h3>
            <p class="muted" style="margin:0 0 12px 0">Ready for a smooth ride? Join us — reach your destinations with ease and comfort.</p>
            <a href="/book" class="btn" style="display:inline-block;text-decoration:none">Book Now</a>
          </div>

          <div class="card" style="margin-top:12px;">
            <h4 style="margin:0 0 8px 0">Office Hours</h4>
            <div class="muted">Mon — Sun: 08:00 — 20:00</div>
          </div>
        </aside>
      </div>
    </section>

    <footer>
      Copyright © <span id="year"></span> mbu transport
    </footer>
  </div>

  <script>
    // Put your real form endpoint here (e.g., a server route or 3rd-party form webhook)
    const FORM_ENDPOINT = "/api/contact"; // <-- change this to your real endpoint

    document.getElementById('year').textContent = new Date().getFullYear();

    const form = document.getElementById('contactForm');
    const formMsg = document.getElementById('formMsg');
    const spinner = document.getElementById('spinner');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      formMsg.textContent = '';
      // simple client-side validation
      const firstName = document.getElementById('firstName').value.trim();
      const lastName = document.getElementById('lastName').value.trim();
      const email = document.getElementById('email').value.trim();
      const message = document.getElementById('message').value.trim();

      if(!firstName || !lastName || !email || !message){
        formMsg.textContent = 'Please fill all required fields.';
        return;
      }
      // basic email pattern
      if(!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)){
        formMsg.textContent = 'Please enter a valid email address.';
        return;
      }

      // show spinner
      spinner.style.display = 'block';

      // Submit form via fetch to your endpoint (example JSON body)
      try {
        // If you don't have an endpoint yet, comment out the fetch and simulate success:
        const payload = { firstName, lastName, email, message, timestamp: new Date().toISOString() };

        // Example: send to endpoint (uncomment when you have backend)
        // const res = await fetch(FORM_ENDPOINT, {
        //   method: 'POST',
        //   headers: { 'Content-Type': 'application/json' },
        //   body: JSON.stringify(payload)
        // });
        // if(!res.ok) throw new Error('Network response was not ok');

        // Simulate success for now:
        await new Promise(r => setTimeout(r, 800));

        formMsg.style.color = 'green';
        formMsg.textContent = 'Thanks — your message has been sent.';
        form.reset();
      } catch (err) {
        console.error(err);
        formMsg.style.color = '#d9534f';
        formMsg.textContent = 'There was an error trying to submit your form. Please try again.';
      } finally {
        spinner.style.display = 'none';
      }
    });
  </script>
</body>
</html>
